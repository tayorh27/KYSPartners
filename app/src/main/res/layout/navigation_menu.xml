<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgrounds"
    android:fadeScrollbars="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/backgrounds"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            style="@style/Toolbar"
            app:contentInsetStart="0dp">

            <ImageView
                android:id="@+id/guillotine_hamburger"
                style="@style/ImageView.Hamburger"
                android:src="@drawable/ic_menu" />
        </android.support.v7.widget.Toolbar>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_marginTop="10dp"
            android:background="@color/backgrounds"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/my_product"
                style="@style/LinearLayout.GuillotineItem"
                android:layout_marginTop="48dp"
                android:clickable="true">

                <ImageView
                    style="@style/ImageView.GuillotineItem"
                    android:src="@drawable/ic_shopping_cart_black_24dp" />

                <com.kys.kyspartners.widget.CanaroTextView
                    style="@style/TextView.GuillotineItem"
                    android:text="My Products"
                    android:textAllCaps="true" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/add_product"
                style="@style/LinearLayout.GuillotineItem"
                android:clickable="true">

                <ImageView
                    style="@style/ImageView.GuillotineItem"
                    android:src="@drawable/ic_playlist_add_black_24dp" />

                <com.kys.kyspartners.widget.CanaroTextView
                    style="@style/TextView.GuillotineItem"
                    android:text="Add New Product"
                    android:textAllCaps="true" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/data_stat"
                style="@style/LinearLayout.GuillotineItem"
                android:clickable="true">

                <ImageView
                    style="@style/ImageView.GuillotineItem"
                    android:src="@drawable/ic_timeline_black_24dp" />

                <com.kys.kyspartners.widget.CanaroTextView
                    style="@style/TextView.GuillotineItem"
                    android:text="Data Stat"
                    android:textAllCaps="true" />
            </LinearLayout>

            <!--<View-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="@dimen/guillotine_divider_height" />-->

            <LinearLayout
                android:id="@+id/my_shop"
                style="@style/LinearLayout.GuillotineItem"
                android:clickable="true">

                <ImageView
                    style="@style/ImageView.GuillotineItem"
                    android:src="@drawable/ic_business_center_black_24dp" />

                <com.kys.kyspartners.widget.CanaroTextView
                    style="@style/TextView.GuillotineItem"
                    android:text="My Shop"
                    android:textAllCaps="true" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/my_profile"
                style="@style/LinearLayout.GuillotineItem"
                android:clickable="true">

                <ImageView
                    style="@style/ImageView.GuillotineItem"
                    android:src="@drawable/ic_person_black_24dp" />

                <com.kys.kyspartners.widget.CanaroTextView
                    style="@style/TextView.GuillotineItem"
                    android:text="My Profile"
                    android:textAllCaps="true" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/support_centre"
                style="@style/LinearLayout.GuillotineItem"
                android:clickable="true">

                <ImageView
                    style="@style/ImageView.GuillotineItem"
                    android:src="@drawable/ic_message_black_24dp" />

                <com.kys.kyspartners.widget.CanaroTextView
                    style="@style/TextView.GuillotineItem"
                    android:text="Support Centre"
                    android:textAllCaps="true" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/sign_out"
                style="@style/LinearLayout.GuillotineItem"
                android:clickable="true">

                <ImageView
                    style="@style/ImageView.GuillotineItem"
                    android:src="@drawable/ic_error_outline_black_24dp" />

                <com.kys.kyspartners.widget.CanaroTextView
                    style="@style/TextView.GuillotineItem"
                    android:text="Sign Out"
                    android:textAllCaps="true" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>